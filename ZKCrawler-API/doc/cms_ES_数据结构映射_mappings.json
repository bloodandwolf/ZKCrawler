{
    "settings": {
        "number_of_shards": 2,
        "number_of_replicas": 2
    },
    "mappings": {
        "cmsdata": {
            "properties": {
                "taskId": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "url": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "statusCode": {
                    "type": "integer",
                    "store": true,
                    "index": "no"
                },
                "rootUrl": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "fromUrl": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "title": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "text": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "html": {
                    "type": "string",
                    "store": true,
                    "index": "no"
                },
                "publishTime": {
                    "type": "date",
                    "store": true,
                    "format": "yyyy-MM-dd HH:mm:ss",
                    "index": "analyzed"
                },
                "crawlTime": {
                    "type": "date",
                    "store": true,
                    "format": "yyyy-MM-dd HH:mm:ss",
                    "index": "analyzed"
                },
                "hotLevel": {
                    "type": "integer",
                    "store": true,
                    "index": "analyzed"
                },
                "categories": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "categoriesInfo": {
                    "dynamic": true,
                    "type": "nested",
                    "properties": {
                        "name": {
                            "type": "string",
                            "store": true,
                            "index": "analyzed"
                        },
                        "addTime": {
                            "type": "date",
                            "store": true,
                            "format": "yyyy-MM-dd HH:mm:ss"
                        }
                    }
                },
                "tags": {
                    "type": "string",
                    "store": true,
                    "index": "analyzed"
                },
                "tagsInfo": {
                    "dynamic": true,
                    "type": "nested",
                    "properties": {
                        "name": {
                            "type": "string",
                            "store": true,
                            "index": "analyzed"
                        },
                        "addTime": {
                            "type": "date",
                            "store": true,
                            "format": "yyyy-MM-dd HH:mm:ss"
                        }
                    }
                },
                "pasedData": {
                    "dynamic": true,
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "store": true,
                            "index": "no"
                        }
                    }
                },
                "extensions": {
                    "dynamic": true,
                    "type": "nested",
                    "properties": {
                        "_ex_name": {
                            "type": "string",
                            "store": true,
                            "index": "analyzed"
                        },
                        "_ex_type": {
                            "type": "string",
                            "store": true
                        },
                        "_ex_value": {
                            "type": "string",
                            "store": true,
                            "index": "analyzed"
                        },
                        "_ex_description": {
                            "type": "string",
                            "store": true,
                            "index": "no"
                        }
                    }
                }
            }
        }
    }
}

